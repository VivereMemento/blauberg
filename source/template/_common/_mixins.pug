//- ----------- logo -------------- //

mixin logo(text, src, mods)
    div(class="logo " + ((mods === false) ? "" : mods))
        a.logo__link(href="#")
            img.logo__img(src="assets/img/" + src)
            .logo__text=text

//- ----------- checkbox -------------- //

mixin checkbox(text)
    label.checkbox
        input.checkbox__input(name="location" type="radio")
        .checkbox__elem
        .checkbox__text= text

//- ----------- menu -------------- //

mixin menu(array, active, mods)
    ul(class="menu__list" + mods)
        each item in array
            li(class="menu__item" + (item === active ? " active" : ""))
                a(class="menu__link" href="#")=item

//- ----------- slideshow -------------- //

mixin slideshow(array, id)
    .slideshow__display
        ul(id="" + (id !== "") ? id : "").slideshow__list
            each item in array
                li.slideshow__item.fade
                    img.slideshow__img(src="" + item.url alt="slide")
                    if array == wallProduct
                        .description.wall__description_mods
                            .description-text #{item.text}
                            .description-price(class="" + ((item.sale !== "") ? 'description-price_color' + '' : '') data-sale="" + item.sale) #{item.price}  
        div.dots
            span(class="dot")
            span(class="dot")
            span(class="dot")
            span(class="dot")

