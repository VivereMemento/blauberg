									{seria: 'Blaubox E', type: 'Blaubox E200-1.8'},
									{seria: 'Blaubox E', type: 'Blaubox E200-1.8'},
									{seria: 'Blaubox E', type: 'Blaubox E200-1.8'},
									{seria: 'Blaubox E', type: 'Blaubox E200-1.8'}
								];
							.applicability
								ul.applicability__list
									each applicability in applicabilities
